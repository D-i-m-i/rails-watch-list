<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path("pexels-anthony-157544.jpg")%>)">
    <div class="container">
      <h1>Save your favorite movies</h1>
      <p>When memory fails you, this app saves you</p>
    </div>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <%= list.name %> </div>
      <% end %>
    <% end %>
  </div>

  <%= link_to "Create a new category", new_list_path, class: "btn btn-gradient" %>

</div>
