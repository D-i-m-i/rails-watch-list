<div class="container">

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path("pexels-anthony-157544.jpg")%>)">
    <%= @list.name %>
  </div>

  <%= link_to "Bookmark a movie", new_list_bookmark_path(@list), class: "btn btn-gradient" %>

  <% @bookmarks.each do |bookmark|%>
    <div class="card-product">
      <img src= <%= bookmark.movie.poster_url %> />
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.comment %></p>
        <p><%= link_to 'Delete', list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  <% end %>

  <%= link_to "Back to lists", lists_path, class: "btn btn-ghost" %>
</div>
